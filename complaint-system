            </div>
        </div>
    </div>

    <!-- Update Modal -->
    <div id="updateModal" class="modal">
        <div class="modal-content">
            <h3>Update Complaint</h3>
            <p class="modal-id">ID: <span id="modalComplaintId"></span></p>
            
            <div class="form-group">
                <label>Status</label>
                <select id="modalStatus">
                    <option value="Pending">Pending</option>
                    <option value="In Progress">In Progress</option>
                    <option value="Resolved">Resolved</option>
                </select>
            </div>
            
            <div class="form-group">
                <label>Admin Remarks</label>
                <textarea id="modalRemarks" rows="3" placeholder="Add your remarks..."></textarea>
            </div>
            
            <div class="modal-buttons">
                <button class="modal-btn update" onclick="updateComplaint()">Update</button>
                <button class="modal-btn cancel" onclick="closeModal()">Cancel</button>
            </div>
        </div>
    </div>

    <script>
        // Global Variables
        let currentComplaintId = null;

        // LocalStorage Functions
        function saveComplaint(complaint) {
            let complaints = getComplaints();
            complaints.push(complaint);
            localStorage.setItem('complaints', JSON.stringify(complaints));
        }

        function getComplaints() {
            const data = localStorage.getItem('complaints');
            return data ? JSON.parse(data) : [];
        }

        function updateComplaintData(id, status, remarks) {
            let complaints = getComplaints();
            complaints = complaints.map(c => 
                c.id === id ? { ...c, status: status, adminRemarks: remarks } : c
            );
            localStorage.setItem('complaints', JSON.stringify(complaints));
        }

        // Page Navigation
        function showPage(pageId) {
            const pages = document.querySelectorAll('.page');
            pages.forEach(page => page.classList.remove('active'));
            document.getElementById(pageId).classList.add('active');
            
            if (pageId === 'adminDashboardPage') {
                loadAllComplaints();
            }
        }

        // Submit Complaint
        function submitComplaint() {
            const studentName = document.getElementById('studentName').value.trim();
            const studentId = document.getElementById('studentId').value.trim();
            const category = document.getElementById('category').value;
            const description = document.getElementById('description').value.trim();
            
            if (!studentName || !studentId || !category || !description) {
                alert('Please fill all fields!');
                return;
            }
            
            const complaint = {
                id: 'CMP' + Date.now(),
                studentName: studentName,
                studentId: studentId,
                category: category,
                description: description,
                status: 'Pending',
                date: new Date().toLocaleString(),
                adminRemarks: ''
            };
            
            saveComplaint(complaint);
            
            alert(` Complaint submitted successfully!\n\n Your Tracking ID is: ${complaint.id}\n\n Please save this ID to track your complaint.`);
            
            // Clear form
            document.getElementById('studentName').value = '';
            document.getElementById('studentId').value = '';
            document.getElementById('category').value = '';
            document.getElementById('description').value = '';
        }

        // Track Complaint
        function trackComplaint() {
            const trackId = document.getElementById('trackId').value.trim();
            
            if (!trackId) {
                alert('Please enter a complaint ID!');
                return;
            }
            
            const complaints = getComplaints();
            const complaint = complaints.find(c => c.id === trackId);
            
            const resultDiv = document.getElementById('complaintResult');
            
            if (!complaint) {
                alert(' Complaint ID not found!');
                resultDiv.style.display = 'none';
                return;
            }
            
            let statusClass = 'pending';
            if (complaint.status === 'In Progress') statusClass = 'progress';
            if (complaint.status === 'Resolved') statusClass = 'resolved';
            
            let remarksHTML = '';
            if (complaint.adminRemarks) {
                remarksHTML = `
                    <div class="remarks-box">
                        <label>Admin Remarks</label>
                        <p>${complaint.adminRemarks}</p>
                    </div>
                `;
            }
            
            resultDiv.innerHTML = `
                <div class="result-grid">
                    <div class="result-item">
                        <label>Complaint ID</label>
                        <p>${complaint.id}</p>
                    </div>
                    <div class="result-item">
                        <label>Status</label>
                        <p><span class="status-badge ${statusClass}">${complaint.status}</span></p>
                    </div>
                    <div class="result-item">
                        <label>Student Name</label>
                        <p>${complaint.studentName}</p>
                    </div>
                    <div class="result-item">
                        <label>Category</label>
                        <p>${complaint.category}</p>
                    </div>
                </div>
                <div class="result-item">
                    <label>Description</label>
                    <p>${complaint.description}</p>
                </div>
                <div class="result-item">
                    <label>Submitted On</label>
                    <p>${complaint.date}</p>
                </div>
                ${remarksHTML}
            `;
            
            resultDiv.style.display = 'block';
        }

        // Admin Login
        function adminLogin() {
            const password = document.getElementById('adminPassword').value;
            
            if (password === 'admin123') {
                document.getElementById('adminPassword').value = '';
                showPage('adminDashboardPage');
            } else {
                alert(' Incorrect password!');
            }
        }

        // Admin Logout
        function logout() {
            showPage('homePage');
        }

        // Load All Complaints
        function loadAllComplaints() {
            const complaints = getComplaints();
            const complaintsListDiv = document.getElementById('complaintsList');
            const countSpan = document.getElementById('complaintCount');
            
            countSpan.textContent = complaints.length;
            
            if (complaints.length === 0) {
                complaintsListDiv.innerHTML = '<p class="empty-state">No complaints submitted yet.</p>';
                return;
            }
            
            complaintsListDiv.innerHTML = complaints.map(complaint => {
                let statusClass = 'pending';
                if (complaint.status === 'In Progress') statusClass = 'progress';
                if (complaint.status === 'Resolved') statusClass = 'resolved';
                
                let remarksHTML = '';
                if (complaint.adminRemarks) {
                    remarksHTML = `<div class="admin-remarks"><strong>Remarks:</strong> ${complaint.adminRemarks}</div>`;
                }
                
                return `
                    <div class="complaint-card">
                        <div class="complaint-header">
                            <div class="complaint-info">
                                <h4>${complaint.id}</h4>
                                <p>${complaint.studentName} (${complaint.studentId})</p>
                            </div>
                            <span class="status-badge ${statusClass}">${complaint.status}</span>
                        </div>
                        
                        <div class="complaint-details">
                            <p><strong>Category:</strong> ${complaint.category}</p>
                            <p><strong>Date:</strong> ${complaint.date}</p>
                        </div>
                        
                        <p class="complaint-description">${complaint.description}</p>
                        
                        ${remarksHTML}
                        
                        <button class="update-btn" onclick='openUpdateModal("${complaint.id}", "${complaint.status}", "${complaint.adminRemarks.replace(/'/g, "\\'")}")'>
                            Update Status
                        </button>
                    </div>
                `;
            }).join('');
        }

        // Modal Functions
        function openUpdateModal(id, status, remarks) {
            currentComplaintId = id;
            document.getElementById('modalComplaintId').textContent = id;
            document.getElementById('modalStatus').value = status;
            document.getElementById('modalRemarks').value = remarks;
            document.getElementById('updateModal').classList.add('active');
        }

        function closeModal() {
            document.getElementById('updateModal').classList.remove('active');
            currentComplaintId = null;
        }

        function updateComplaint() {
            if (!currentComplaintId) return;
            
            const newStatus = document.getElementById('modalStatus').value;
            const remarks = document.getElementById('modalRemarks').value.trim();
            
            updateComplaintData(currentComplaintId, newStatus, remarks);
            
            alert('‚úÖ Complaint updated successfully!');
            closeModal();
            loadAllComplaints();
        }

        // Close modal when clicking outside
        document.getElementById('updateModal').addEventListener('click', function(event) {
            if (event.target === this) {
                closeModal();
            }
        });
    </script>
</body>
</html>
