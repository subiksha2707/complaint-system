<body>
    <div class="container">
        <!-- Home Page -->
        <div id="homePage" class="page active">
            <div class="card">
                <div class="header">
                    <h1>üéì College Complaint Portal</h1>
                    <p class="subtitle">Submit and track your complaints efficiently</p>
                </div>
                
                <div class="nav-grid">
                    <button class="nav-btn" onclick="showPage('submitPage')">
                        <div class="nav-btn-icon"></div>
                        <h3>Submit Complaint</h3>
                        <p>File a new complaint</p>
                    </button>
                    
                    <button class="nav-btn green" onclick="showPage('trackPage')">
                        <div class="nav-btn-icon"></div>
                        <h3>Track Complaint</h3>
                        <p>Check complaint status</p>
                    </button>
                    
                    <button class="nav-btn purple" onclick="showPage('adminLoginPage')">
                        <div class="nav-btn-icon"></div>
                        <h3>Admin Login</h3>
                        <p>Manage complaints</p>
                    </button>
                </div>
            </div>
        </div>

        <!-- Submit Complaint Page -->
        <div id="submitPage" class="page">
            <button class="back-btn" onclick="showPage('homePage')">‚Üê Back to Home</button>
            
            <div class="card">
                <h2 class="page-title">Submit New Complaint</h2>
                
                <div class="form-group">
                    <label>Student Name</label>
                    <input type="text" id="studentName" placeholder="Enter your full name">
                </div>
                
                <div class="form-group">
                    <label>Student ID</label>
                    <input type="text" id="studentId" placeholder="Enter your student ID">
                </div>
                
                <div class="form-group">
                    <label>Category</label>
                    <select id="category">
                        <option value="">Select Category</option>
                        <option value="Infrastructure">Infrastructure</option>
                        <option value="Faculty">Faculty</option>
                        <option value="Facilities">Facilities</option>
                        <option value="Library">Library</option>
                        <option value="Cafeteria">Cafeteria</option>
                        <option value="Transport">Transport</option>
                        <option value="Other">Other</option>
                    </select>
                </div>
                
                <div class="form-group">
                    <label>Description</label>
                    <textarea id="description" rows="5" placeholder="Describe your complaint in detail..."></textarea>
                </div>
                
                <button class="submit-btn" onclick="submitComplaint()">Submit Complaint</button>
            </div>
        </div>

        <!-- Track Complaint Page -->
        <div id="trackPage" class="page">
            <button class="back-btn" onclick="showPage('homePage')">‚Üê Back to Home</button>
            
            <div class="card">
                <h2 class="page-title">Track Your Complaint</h2>
                
                <div class="form-group">
                    <label>Enter Complaint ID</label>
                    <div class="track-input-group">
                        <input type="text" id="trackId" placeholder="e.g., CMP1234567890">
                        <button class="track-btn" onclick="trackComplaint()">Track</button>
                    </div>
                </div>
                
                <div id="complaintResult" style="display: none;"></div>
            </div>
        </div>

        <!-- Admin Login Page -->
        <div id="adminLoginPage" class="page">
            <button class="back-btn" onclick="showPage('homePage')">‚Üê Back to Home</button>
            
            <div class="card" style="max-width: 500px; margin: 80px auto;">
                <h2 class="page-title" style="text-align: center;">üë• Admin Login</h2>
                
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" id="adminPassword" placeholder="Enter admin password">
                    <p class="hint">Demo password: admin123</p>
                </div>
                
                <button class="submit-btn purple" onclick="adminLogin()">Login</button>
            </div>
        </div>

        <!-- Admin Dashboard Page -->
        <div id="adminDashboardPage" class="page">
            <div class="dashboard-header">
                <h2 class="page-title">Admin Dashboard</h2>
                <button class="logout-btn" onclick="logout()">Logout</button>
            </div>
            
            <div class="card">
                <h3 style="font-size: 22px; font-weight: 700; margin-bottom: 25px;">
                    All Complaints (<span id="complaintCount">0</span>)
                </h3>
                
